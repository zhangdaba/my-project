/* 登录 注册 样式 */

.sign {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  padding-top: 30rpx;
}

.signLift {
  height: 70rpx;
  width: 230rpx;
  margin-top: 20rpx;
  float: left;
}

.signLift text {
  font-size: 32rpx;
}

.signRight {
  float: right;
}

.signRight text {
  font-size: 26rpx;
}

.hoverSign {
  color: #44A9FF;
}