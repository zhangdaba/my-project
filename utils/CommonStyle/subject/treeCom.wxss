.ChapterRecursions {
  width: 100%;
  margin: 10rpx auto;
  background: #fff;
}

.ChapterRecursions .ChapterRecursionsNum {
  width: 80%;
  margin: 0 auto;
}

.ChapterRecursions .ChapterRecursionsNum > view {
  border-bottom: 4rpx solid #f6f7fb;
  position: relative;
}

.ChapterRecursions .ChapterRecursionsNum > view:before {
 content: "";
 display: block;
 position: absolute;
 bottom: -3rpx;
 left: -110rpx;
 width: 20%;
 height: 4rpx;
 background: #f6f7fb;
}

.ChapterRecursions .ChapterRecursionsNum > view::after {
 content: "";
 display: block;
 position: absolute;
 bottom: -3rpx;
 right: -110rpx;  
 width: 20%;
 height: 4rpx;
 background: #f6f7fb;
}

.contentName {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: baseline;
  font-size: 34rpx;
}

.flex-container {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: baseline;
  font-size: 34rpx;
  padding: 10rpx 0;
}

.flex-container view:nth-of-type(1) {
  width: 80%;
  overflow: hidden;
  word-break: normal;
  text-overflow: ellipsis;
}

.list-container {
  margin-left: 20rpx;
  color: #5c5c5c;
}

.item-container {
  margin-left: 40rpx;
  color: #999;
}