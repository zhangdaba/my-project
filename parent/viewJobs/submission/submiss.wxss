scroll-view {
  height: 100%;
}

.top-tab {
  height: 64rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  -webkit-justify-content: space-around;
  background-color: #fff;
  align-items: stretch;
  font-size: 32rpx;
  color: #7b7b7b;
}

.top-tab-item {
  flex-grow: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
}

.active {
  color: #44a9ff;
  border-bottom: 3px solid #44a9ff;
}

.classNum {
  width: 92%;
  margin: 20rpx auto 0;
}

.class {
  width: 100%;
  height: 400rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  margin-top: 20rpx;
}

.class .class_name {
  width: 94%;
  margin: 0 auto;
}

.class .class_title {
  font-size: 28rpx;
  font-weight: 600;
  margin: 20rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.class_title view:first-child {
  width: 50%;
  background: #8ccaff;
  color: #fff;
  padding: 12rpx 0;
  border-radius: 0 50rpx 50rpx 0;
  /* overflow: hidden; */
  text-overflow: ellipsis;
  white-space:normal;
  position: relative;
}

.class_title view::after {
  content: '';
  display: block;
  clear: both;
  height: 0;
}

.class_title view::before {
  content: '';
  display: block;
  position: absolute;
  left: -28rpx;
  top: 0rpx;
  width: 30rpx;
  height: 100%;
  background: #8ccaff;
}

.class .class_center {
  height: 120rpx;
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  display: -webkit-flex;
}

.class_center view:nth-of-type(1) {
  height: 100%;
  width: 120rpx;
  line-height: 120rpx;
  text-align: center;
  border-radius: 50%;
  background: #f6f7fb;
}

.class_center view:nth-of-type(1) icon {
  color: #44a9ff;
  font-size: 56rpx;
}

.class_center view:nth-of-type(2) {
  margin: auto 20rpx;
  font-size: 30rpx;
}

.class .class_bottom {
  width: 100%;
  height: 100rpx; 
  background: #fcfcfc;
  color: #ccc;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  padding-left: 18rpx;
}

.class .class_bottom view {
  margin: 10rpx;
}

.btn {
  width: 60%;
  border-radius: 50rpx;
  margin-top: 50rpx;
}