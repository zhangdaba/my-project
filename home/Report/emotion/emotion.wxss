  font-size: 28rpx;
  text-align: center;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
}

.student_subject .student_list_item {
  width: 25%;
  margin: 20rpx 0;
}

.flex view {
  text-align: center;
}

.xiangqing {
  position: relative;
}

.zhengque {
