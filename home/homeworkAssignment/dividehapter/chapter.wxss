/* 章节结构 */
.view {
  width: 100%;
  height: 120rpx;
  background: #fff;
  border-top: 1px dotted #CDCDCD;
}

.view:last-child {
  border-bottom: 1px dotted #CDCDCD;
}

.hoverview {
  background: #EDEDED;
}

.view image {
  width: 100rpx;
  height: 100rpx;
  padding-left: 10rpx;
  float: left;
}

.view .text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  float: left;
  padding-left: 20rpx;
}

.text-item {
  font-weight: 700;
}

.text-itemName {
  font-size: 26rpx;
  color: #f00;
}

.view .text text:nth-child(2) {
  color: #ccc;
}

.icon {
  float: right;
  color: #BFBFBF;
  padding-top: 20rpx;
}

