/* 章节结构结束 */

.chapterAnd {
  display: flex;
  display: -webkit-flex;
  flex-direction: column; 
}

.chapterAnd view {
  margin-top: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.chapterAnd .chapter {
  width: 95%;
  background: #fff;
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #202020;
}

.chapterAnd .chapter .chapter_list {
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.chapterAnd .chapter .chapter_list .chapter_list_item {
  padding-left: 40rpx;
  font-size: 26rpx;
  color: #999;
}