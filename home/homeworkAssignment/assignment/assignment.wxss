.cox {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}

.box {
  width: 90%;
  height: 210rpx;
  background: #fff;
  margin: 14rpx auto;
  border-radius: 8px;
  display: flex;
  display: -webkit-flex;
  justify-content: cneter;
  align-items: center;
}

.box_list {
  width: 84%;
  height: 80%;
  margin: 0 auto;
}

.box_list_item {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.box_list_item .box_item {
  width: 152rpx;
  height: 152rpx;
  text-align: center;
  background: #f6f7fb;
  border-radius: 50%;
}

.box_list_item .box_subject {
  color: #44a9ff;
  font-size: 30rpx;
  font-weight: 700;
}

.box_list_item .box_item view:first-child {
  margin-top: 22rpx;
}

.box_list_item .font_weight {
  font-weight: 600;
  font-size: 30rpx;
}

.box_list_item .Arrow_right icon {
  font-size: 50rpx;
  color: #ccc;
}

.box_list_item .box_item icon {
  font-size: 50rpx;
  /* box-shadow: 6rpx 6rpx 6rpx #44a9ff; */
}