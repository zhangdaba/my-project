/* 搜索框的实现 */
.search {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:80rpx;
  border-radius: 5rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  background: #fff;
}

.search input {
  font-size: 26rpx;
  width: 76%;
  height: 80%;
  border: 1px solid #00CD8A;
  padding-left: 40rpx;
  border-radius: 20rpx;
}

.picker {
  height: 96rpx;
  line-height: 96rpx;
  margin-bottom: 10rpx;
  padding-left: 36rpx;
  background: #fff;
}

.picker text:nth-child(1) {
  display: inline-block;
  font-size: 34rpx;
}

.picker text:nth-child(2) {
  font-size: 34rpx;
  float: right;
  padding-right: 20rpx;
}

.school {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  width: 94%;
  background: rgba(0,0,0,.1);
  border-radius: 20rpx;
  margin-left: 20rpx;
  text-indent: 40rpx;
  font-size: 28rpx;
}

.schoolHover {
  color: #00CD8A;
}

.nothing {
  font-size: 34rpx;
  text-align: center;
  margin-top: 40rpx;
}